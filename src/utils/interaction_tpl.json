{
  "version": 1,
  "sys_receive_like_msg": {
    "type": "sys_receive_like_msg",
    "template": "interaction",
    "summary": "${customerName}赞了您的【${title}】",
    "body": {
      "content": "赞了您的【${title}】",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}",
      "isVideo": "${parentType==0}",
      "thumbnail": "${coverUrl}"
    }
  },
  "sys_receive_collection_msg": {
    "type": "sys_receive_collection_msg",
    "template": "interaction",
    "summary": "${customerName}收藏了您的【${title}】",
    "body": {
      "content": "收藏了您的【${title}】",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}",
      "isVideo": "${parentType==0}",
      "thumbnail": "${coverUrl}"
    }
  },
  "sys_receive_focus_on_person_msg": {
    "type": "sys_receive_focus_on_person_msg",
    "template": "interaction",
    "summary": "${customerName}关注了您",
    "body": {
      "content": "关注了您",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}"
    }
  },
  "sys_receive_focus_on_project_msg": {
    "type": "sys_receive_focus_on_project_msg",
    "template": "interaction",
    "summary": "${customerName}：关注了您的[${estateAddress}]",
    "body": {
      "content": "关注了您的[${estateAddress}]",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}",
      "thumbnail": "https://ali-image.dabanjia.com/static/mp/dabanjia/images/house_default_img.jpg"
    }
  },
  "sys_case_comment": {
    "type": "sys_case_comment",
    "template": "interaction",
    "summary": "${nickname}：${content}",
    "body": {
      "content": "${commentType==0?'回复了您的评论':'评论了您的动态'}",
      "userName": "${nickname}",
      "userAvatar": "${avatar}",
      "thumbnail": "${caseImgUrl}",
      "comment": "${content}",
      "businessType": "1",
      "businessId": "${caseId}",
      "isReply": "${commentType==0}",
      "replyId": "${commentId}"
    }
  }
}
