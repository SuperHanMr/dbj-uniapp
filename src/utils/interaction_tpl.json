{
  "version": 1,
  "sys_receive_like_msg": {
    "type": "sys_receive_like_msg",
    "template": "interaction",
    "summary": "${customerName}赞了您的【${title}】",
    "body": {
      "content": "赞了您的【${title}】",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}",
      "isVideo": "${parentType==0}",
      "thumbnail": "${coverUrl}"
    }
  },
  "sys_receive_collection_msg": {
    "type": "sys_receive_collection_msg",
    "template": "interaction",
    "summary": "${customerName}收藏了您的【${title}】",
    "body": {
      "content": "收藏了您的【${title}】",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}",
      "isVideo": "${parentType==0}",
      "thumbnail": "${coverUrl}"
    }
  },
  "sys_receive_focus_on_person_msg": {
    "type": "sys_receive_focus_on_person_msg",
    "template": "interaction",
    "summary": "${customerName}关注了您的项目【${title}】",
    "body": {
      "content": "关注了您的项目【${title}】",
      "userName": "${customerName}",
      "userAvatar": "${customerAvatar}"
    }
  },
  "sys_case_comment": {
    "type": "sys_case_comment",
    "template": "interaction",
    "summary": "${nickname}${commentType==0?'回复了你的评论':'评论了你的动态'}",
    "body": {
      "content": "${commentType==0?'回复了你的评论':'评论了你的动态'}",
      "userName": "${nickname}",
      "userAvatar": "${avatar}",
      "thumbnail": "${caseImgUrl}",
      "comment": "${content}",
      "businessType": "1",
      "businessId": "${caseId}",
      "isReply": "${commentType==0}",
      "replyId": "${commentId}"
    }
  }
}
